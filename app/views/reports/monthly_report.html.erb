<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Relat√≥rio Mensal</h1>
  </div>
  <div class="col-lg-12">
    <table id="monthly-records" class="table table-striped datatable">
      <thead>
      <tr>
        <th><h3>Dia</h3></th>
      </tr>
      </thead>
      <tbody>
      <% @records.each do |record| %>
          <% records_array = record.second
          %>
          <tr>
            <td>
              <h4><%= l record.first %>
                <a class="btn btn-small pull-right btn-toggle-records" href="#">+</a><p class="pull-right span3"></p></h4>

              <div class="show">
                <hr/>
                <% records_array.each do |rec| %>
                    <p class="text-black"><%= l rec.time, :format => :with_date %></p>
                <% end %>
              </div>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
