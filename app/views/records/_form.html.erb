<div class="row">
  <div class="col-lg-12">
    <%= form_for @record do |f| %>
        <fieldset>
          <%= f.hidden_field :id, class: 'text_field' %>
          <div class="form-group">
            <%= f.label :time %>
            <%= datetime_select('record', 'time', {}, {class: 'form-control'}) %>
          </div>

          <div class="form-group">
            <%= f.label :record_type %>
            <%= f.collection_radio_buttons(:record_type, Record::RECORD_TYPE, :first, :last) do |b| %>
                <div class="radio">
                  <%= b.label { b.radio_button + t("record_types.#{b.text.to_s}") } %>
                </div>
            <% end %>
          </div>

          <%= f.submit class: 'btn btn-lg btn-success btn-block' %>
        </fieldset>
    <% end %>
  </div>
  <!-- /.col-lg-12 -->
</div>