<%= form_for @record, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">    
    <div class="controls">
      <%= f.hidden_field :id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :time, :class => 'control-label' %>
    <div class="controls">
      <%= datetime_select('record','time') %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), records_path, :class => 'btn' %>
  </div>
<% end %>
